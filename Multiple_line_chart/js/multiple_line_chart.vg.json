{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "Net Number of Migrants (by thousands) based on Income Groups From 2000 to 2020",
    "width": 800,
    "height": 600,
    "data": {"url": "https://raw.githubusercontent.com/ExumZ/FIT3179-Week-10-Homework/main/Multiple_line_chart/data/income_group_data_2000_2020.csv"},
    "mark": {
        "type": "line",
        "point": true
    },
    "encoding": {
        "x": {
            "field": "Time", 
            "type": "temporal", 
            "title": "Year"
        },
        "y": {
            "field": "NetMigrations", 
            "type": "quantitative", 
            "title": "Net Number of Migrants (by thousands)"
        },
        "color": {
            "field": "Location", 
            "type": "nominal", 
            "title": "Income Group",
            "scale": {
                "domain": [
                    "High-income countries",
                    "Upper-middle-income countries",
                    "Middle-income countries",
                    "Lower-middle-income countries",
                    "Low-income countries",
                    "No income group available"
                ]
            }
        },
        "tooltip": [
            {
                "field": "Location", "type": "nominal", "title": "Income Group"
            },
            {
                "field": "NetMigrations", "type": "quantitative", "title": "Net Number of Migrants"
            }
        ]
    }
  }